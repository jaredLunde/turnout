{
  "name": "simple-web-app",
  "services": [
    {
      "name": "web",
      "sourcePath": ".",
      "environment": {
        "NODE_ENV": { "value": "production", "sensitive": false },
        "DATABASE_URL": {
          "value": "postgres://user:pass@db:5432/myapp",
          "sensitive": true
        }
      },
      "ports": [{ "number": 3000, "isPublic": true }],
      "dependencies": ["db", "redis"]
    },
    {
      "name": "db",
      "image": "postgres:15",
      "environment": {
        "POSTGRES_DB": { "value": "myapp", "sensitive": false },
        "POSTGRES_USER": { "value": "user", "sensitive": false },
        "POSTGRES_PASSWORD": { "value": "pass", "sensitive": true }
      },
      "ports": [{ "number": 5432, "isPublic": true }],
      "dependencies": []
    },
    {
      "name": "redis",
      "image": "redis:7-alpine",
      "ports": [{ "number": 6379, "isPublic": true }],
      "dependencies": []
    }
  ]
}
